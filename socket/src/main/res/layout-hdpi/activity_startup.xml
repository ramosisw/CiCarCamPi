<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mx.itson.cicarcampi.socket.vistas.Startup"
    android:gravity="center">

    <Button
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="@string/lbl_btn_botones"
        android:id="@+id/btn_botones"
        android:textSize="23sp"
        style="@style/style_btn_main"
        android:background="@drawable/drw_btn_main"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="@string/lbl_btn_acelerometro"
        android:id="@+id/btn_acelerometro"
        style="@style/style_btn_main"
        android:textColor="#ffffffff"
        android:background="@drawable/drw_btn_main"
        android:layout_alignTop="@+id/btn_botones"
        android:layout_toLeftOf="@+id/btn_botones"
        android:layout_toStartOf="@+id/btn_botones"
        android:layout_marginRight="5dp" />

</RelativeLayout>
